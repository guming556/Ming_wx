@import "../tpls/category/category-tpl.wxss";

.category-box{
  display: flex;
  height: 100vh;
  overflow: hidden;
}
.left-box{
  flex: 0 0 150rpx;
  border-right: 1rpx solid #D8D8D8;
}
.menu-item{
  height: 50rpx;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border-left: 6rpx solid #fff;
}
.menu-item.selected{
  color: #AB956D;
  border-left-color: #AB956D;
}
.right-box{
    flex: 1;
}
